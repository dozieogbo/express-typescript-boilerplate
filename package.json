{
  "scripts": {
    "build": "rm -rf dist && tsc",
    "test": "jest",
    "setup": "yarn",
    "clean": "rm -rf dist",
    "start": "node dist/app.js",
    "serve": "nodemon --exec \"npm run build && npm run start\"",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js -f src/ormconfig.ts",
    "db:seed": "ts-node ./node_modules/typeorm-seeding/dist/cli.js -n src/ormconfig.ts seed",
    "migration:generate": "npm run typeorm -- migration:generate  -n",
    "migration:run": "npm run typeorm -- migration:run",
    "postbuild": "copyfiles -u 1 src/**/*.html dist/",
    "generate": "ts-node src/generator/index.ts"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/test/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./test/unit/lib/setup.ts"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.2.6",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "class-validator-jsonschema": "^2.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-status-monitor": "^1.3.3",
    "jsonwebtoken": "^8.5.1",
    "mailgun.js": "^2.0.1",
    "moment": "^2.29.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.13",
    "nodemon": "^2.0.4",
    "pg": "^8.3.3",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0-alpha.6",
    "routing-controllers-openapi": "^2.1.0",
    "supertest": "^5.0.0",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.28",
    "typeorm-seeding": "^1.6.1",
    "typeorm-typedi-extensions": "^0.2.3",
    "uuid": "^8.3.0",
    "winston": "^3.3.3",
    "yargs": "^16.2.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/bluebird": "^3.5.18",
    "@types/body-parser": "^1.19.0",
    "@types/chalk": "^2.2.0",
    "@types/cors": "^2.8.1",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.17.8",
    "@types/express-status-monitor": "^1.2.2",
    "@types/faker": "^4.1.2",
    "@types/figlet": "^1.2.0",
    "@types/helmet": "0.0.41",
    "@types/jest": "23.3.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.1",
    "@types/multer": "^1.4.4",
    "@types/nock": "^9.1.3",
